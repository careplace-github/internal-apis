{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ],
      "@api/v1/*": [
        "src/api/v1/*"
      ],
      "@api/common/*": [
        "src/api/common/*"
      ],
      "@api/admin/*": [
        "src/api/admin/*"
      ],
      "@assets": [
        "src/assets"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@utils": [
        "src/utils"
      ],

      "@constants": [
        "src/config/constants"
      ],
      "@logs/*": [
        "src/logs/*"
      ],
      "@logger": [
        "src/logs/logger"
      ],
    },
    "types": [
      "node"
    ],
    "target": "es5",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules/**/*",
    "**/*.spec.ts",
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}