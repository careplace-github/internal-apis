{
  "name": "careplace-internal-apis",
  "version": "0.1.0",
  "description": "Internal RESTful APIs for Careplace platforms.",
  "main": "./src/server.ts",
  "private": true,
  "nodemonConfig": {
    "ignore": [
      "./src/assets/data/*.json"
    ]
  },
  "scripts": {
    "start": "ENV=production node --trace-warnings --experimental-modules -r ts-node/register -r tsconfig-paths/register ./src/server.ts",
    "start:staging": "ENV=staging node --trace-warnings --experimental-modules -r ts-node/register -r tsconfig-paths/register ./src/server.ts",
    "build": "rimraf ./build && tsc --project tsconfig.json",
    "dev": "ENV=development nodemon --exec \"node --trace-warnings --experimental-modules -r ts-node/register -r tsconfig-paths/register\" ./src/server.ts",
    "dev:stripe": "stripe listen --forward-to localhost:8080/v1/webhooks/stripe",
    "dev:staging": "ENV=staging nodemon --exec \"node --trace-warnings --experimental-modules -r ts-node/register -r tsconfig-paths/register\" ./src/server.ts",
    "docker-dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker-prod": "docker-compose -f docker-compose.prod.yml up --build",
    "non-docker-dev": "npm run dev",
    "stripe-cli-setup": "node ./scripts/stripe-cli-setup.js",
    "dev:ngrok": "npx ngrok http 8080 --host-header=rewrite --config=.ngrok/ngrok.yml",
    "test:jest": "jest --coverage",
    "test:jest-watch": "jest --watch",
    "test:jenkins": "jenkins tests/test-dev.Jenkinsfile",
    "test:snyk": "snyk test",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "lint:quiet": "eslint . --ext .js,.ts --quiet",
    "lint:commit": "lint-staged",
    "commitmsg": "commitlint -E HUSKY_GIT_PARAMS",
    "depcheck": "depcheck --config=.depcheckrc",
    "prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
    "prettier-check": "prettier --check 'src/**/*.{js,jsx,ts,tsx}'",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:commit"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "yarn prettier",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CarelyPT/crm-backend.git"
  },
  "keywords": [
    "Careplace"
  ],
  "author": "CARELY, LDA.",
  "bugs": {
    "url": "https://github.com/CarelyPT/crm-backend/issues"
  },
  "homepage": "https://github.com/CarelyPT/crm-backend#readme",
  "dependencies": {
    "aws-jwt-verify": "^4.0.0",
    "aws-sdk": "2.1354.0",
    "axios": "^1.4.0",
    "btoa-lite": "^1.0.0",
    "commitlint": "^17.6.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "eslint": "^8.43.0",
    "express": "^4.18.1",
    "express-http-context": "^1.2.4",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "jwk-to-pem": "^2.0.5",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "micro": "^10.0.1",
    "mongoose": "^6.11.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.0",
    "point-in-polygon": "^1.1.0",
    "prettier": "^2.8.8",
    "regression": "^2.0.1",
    "secure-random-password": "^0.2.3",
    "stripe": "^11.4.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.4.0",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "xss-clean": "^0.1.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-angular": "^17.6.6",
    "@snyk/protect": "^1.1190.0",
    "@types/btoa-lite": "^1.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/hpp": "^0.2.2",
    "@types/jwk-to-pem": "^2.0.1",
    "@types/lodash": "^4.14.195",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.1.1",
    "@types/nodemailer": "^6.4.9",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.58.0",
    "child_process": "^1.0.2",
    "concurrently": "^8.2.0",
    "conventional-changelog-cli": "^3.0.0",
    "depcheck": "^1.4.3",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jenkins": "^1.0.2",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.0",
    "os": "^0.1.2",
    "rimraf": "^5.0.0",
    "snyk": "^1.1190.0",
    "ts-jest": "^29.1.0"
  }
}
