{
  "name": "careplace-backend",
  "version": "1.0.0",
  "description": "Careplace REST API Backend for Web and Mobile Applications.",
  "main": "./src/server.ts",
  "private": true,
  "nodemonConfig": {
    "ignore": [
      "./src/assets/data/*.json"
    ]
  },
  "scripts": {
    "start": "node build/server.cjs",
    "build": "rimraf ./build && tsc --project tsconfig.json",
    "dev": "yarn dev:backend",
    "dev:backend": "nodemon --exec ts-node --esm ./src/server.cjs",
    "dev:ngrok": "npx ngrok http 8080 --host-header=rewrite --config=ngrok.yml",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CarelyPT/crm-backend.git"
  },
  "keywords": [
    "Careplace"
  ],
  "author": "CARELY, LDA.",
  "bugs": {
